[Unit]
Description=Backup
After=docker.service
Requires=docker.service

[Service]
User=core
TimeoutStartSec=5
ExecStart=/bin/bash -c  ' \
  /usr/bin/docker run \
    -v /var/lib/backup:/tmp/backup-test \
    --name=backup-ghost \
    --rm \
    --privileged  \
    --entrypoint "/bin/bash" \
    tkruitbosch/backup-volume \
    file:///var/lib/data'

ExecStop=/usr/bin/docker stop backup-ghost

[Install]
WantedBy=multi-user.target